{
    // License
    "licenser.disableAutoHeaderInsertion": true,
    "licenser.useSingleLineStyle": true,
    "licenser.license": "AGPLv3",
    "licenser.author": "Ashton Hellwig",
    "licenser.projectName": "cvcb",
    /* Programming Languages */
    // Shellscript
    "[shellscript]": {
        "files.eol": "\n",
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
        "editor.rulers": [
            80
        ]
    },
    "shellformat.path": "/home/ahellwig/go/bin/shfmt",
    "shellformat.flag": "-ln bash -i 2 -bn -ci -sr",
    "shellformat.effectLanguages": [
        "shellscript",
        "dotenv",
        "ignore",
        "gitignore"
    ],
    "shellcheck.enable": true,
    "shellcheck.executablePath": "/home/ahellwig/.local/bin/shellcheck",
    "shellcheck.customArgs": [
        "--check-sourced",
        "--color=auto",
        "--format=tty",
        "--source-path=SCRIPTDIR/lib/lib.sh",
        "--shell=bash",
        "--severity=style",
        "--external-sources"
    ],
    "shellcheck.run": "onSave",
    "shellcheck.enableQuickFix": false,
    "shellcheck.exclude": [],
    "shellcheck.ignorePatterns": {
        "**/*.zsh": true
    },
    "shellcheck.useWorkspaceRootAsCwd": false,
    // Python
    "[python]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "python.condaPath": "/home/ahelliwg/anaconda3/bin/conda",
    "python.pythonPath": "/home/ahellwig/anaconda3/envs/cvcb/bin/python",
    "python.envFile": "${workspaceFolder}/.env",
    /// Linting
    "python.linting.enabled": true,
    "python.linting.banditEnabled": false,
    "python.linting.pylamaEnabled": false,
    "python.linting.pylintEnabled": false,
    "python.linting.prospectorEnabled": false,
    "python.linting.pydocstyleEnabled": false,
    "python.linting.pycodestyleEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "/home/ahellwig/anaconda3/envs/cvcb/bin/flake8",
    "python.linting.flake8Args": [],
    "python.linting.mypyEnabled": true,
    "python.linting.mypyPath": "/home/ahellwig/anaconda3/envs/cvcb/bin/mypy",
    // Formatting
    "python.formatting.provider": "yapf",
    "python.formatting.yapfPath": "/home/ahellwig/anaconda3/envs/cvcb/bin/yapf",
    "python.formatting.yapfArgs": [],
    // Docstrings
    "autoDocstring.docstringFormat": "numpy",
    "autoDocstring.generateDocstringOnEnter": true,
    "autoDocstring.includeName": false,
    "autoDocstring.quoteStyle": "'''",
    "autoDocstring.startOnNewLine": false,
    "autoDocstring.guessTypes": true,
    /* Editor */
    "git.enableCommitSigning": true,
    // Files
    "files.encoding": "utf8",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/.mypy_cache": true
    },
    // Terminal
    "terminal.integrated.env.linux": {
        "PYTHON": "/home/ahellwig/anaconda3/envs/cvcb/bin/python"
    },
    "terminal.integrated.environmentChangesIndicator": "on",
    "terminal.integrated.inheritEnv": true,
    // Spell Checker
    "cSpell.ignoreWords": [
        "conda"
    ],
    "cSpell.words": [
        "noqa"
    ]
}